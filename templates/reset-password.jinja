{% extends 'base.jinja' %}
{% from '_helpers.jinja' import render_field with context %}

{% block title %}{{ _('Reset password') }}{% endblock %}

{% block main %}
{% include 'nav.jinja' %}
<div class="row">
    <div class="span12">
        <form id="reset-form" class="form-signin" method="post" action="{{ url_for('nereid.user.reset_account') }}">
            <div class="clearfix ">
                <label for="email">{{ _('Email') }}*:</label>
                <div class="input">
                    <input class="full email required" id="email" name="email" placeholder="{{ _('Email') }}" type="text" value="">
                </div>
            </div>
            <button id="login" class="btn btn-large btn-primary" type="submit">{{ _('Send reset email') }}</button> 
        </form>
    </div>
</div>
{% endblock %}

{% block jquery %}
<script src="{{ STATIC }}{{ config['TEMPLATE'] }}/js/jquery.validate.js" type="text/javascript"></script>

<script type="text/javascript" charset="utf-8">
$(document).ready(function(){
    $.validator.messages.required = "{{ _('Insert a email!') }}";
    $("#reset-form").validate();
});
</script>
{% endblock %}
